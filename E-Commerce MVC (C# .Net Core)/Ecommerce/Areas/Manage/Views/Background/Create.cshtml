@model Background
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";

}

<h1>Create</h1>
<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="@Model.Title"></label>
                <input class="form-control" asp-for="@Model.Title">
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.SubTitle"></label>
                <input class="form-control" asp-for="@Model.SubTitle">
                <span asp-validation-for="@Model.SubTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">

        </div>


        <div class="form-group col-md-4">
            <label asp-for="@Model.File"></label>
            <input accept="image/png,image/jpeg" asp-for="@Model.File" class="form-control" placeholder="Photo">
            <span asp-validation-for="@Model.File" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
    <script>
        // Replace the <textarea id="editor1"> with a CKEditor 4
        // instance, using default configuration.
        CKEDITOR.replace('Desc');
    </script>
}
@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}



<div class="container-fluid fh5co-home-banner">
    @{
    }
    <div class="card">
        <img class="card-img" src="~/uploads/background/@Model.Backgrounds[0].Photo" alt="">
        <div class="card-img-overlay">
            <div class="center-text">
                <h2 class="card-title">
                    @Model.Backgrounds[0].Title
                </h2>
                <a href="#" class="btn">
                    <svg width="201" height="51" viewBox="0 0 201 51">
                        <defs>
                            <style>
                                .cls-1 {
                                    fill: none;
                                    stroke-width: 1px;
                                    stroke: url(#linear-gradient);
                                }
                            </style>
                            <linearGradient id="linear-gradient" x1="140.508" y1="50.5" x2="60.492" y2="0.5" gradientUnits="userSpaceOnUse">
                                <stop offset="0" stop-color="#e90e65" />
                                <stop offset="1" stop-color="#fff" />
                            </linearGradient>
                        </defs>
                        <rect id="Rounded_Rectangle_1" data-name="Rounded Rectangle 1" class="cls-1" x="0.5" y="0.5" width="200" height="50" rx="25" ry="25" />
                    </svg>
                    Explore
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid fh5co-two-img">
    <div class="row">
        <div class="col-sm-6 pr-0 pl-0">
            <div class="card">
                <img class="card-img" src="~/uploads/background/@Model.Backgrounds[1].Photo" alt="">
                <div class="card-img-overlay"> </div>
            </div>
        </div>
        <div class="col-sm-6 pr-0 pl-0">
            <div class="card">
                <img class="card-img" src="~/uploads/background/@Model.Backgrounds[2].Photo" alt="">
                <div class="card-img-overlay"> </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid fh5co-recent-work">
    <div class="container contact-pop">
        <div class="row">
            <div class="col-md-6  pr-0">
                <div class="card">
                    <img class="card-img w-100" src="~/uploads/about/@Model.About[0].Photo" alt="">
                    <div class="card-img-overlay"> </div>
                </div>
            </div>
            <div class="col-md-6 pl-0" id="about">
                <div class="content">
                    <h3>@Model.About[0].Title</h3>
                    <h4>@Model.About[0].SubTitle</h4>
                    <hr />
                    <p>@Model.About[0].Desc</p>
                    <a href="#" class="btn">CONTACT</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container recent" id="activity">
        <div class="row">
            <h2>Recent works</h2>
            <div class="owl-carousel owl-carousel2 owl-theme">

                @for (int i = 0; i < Model.RecentWorks.Count; i++)
                {

                    
                    <div>
                        <div>
                            <div class="card">
                                <img class="card-img" src="~/uploads/recentwork/@Model.RecentWorks[i].Photo" alt="">
                                <div class="card-img-overlay">
                                    @*<a href="#"><img src="~/assets/img/heart.png" class="heart" alt="heart icon"></a>*@
                                    <div class="bottom-text">
                                        <h5 class="card-title">@Model.RecentWorks[i].Name</h5>
                                        <p class="card-text">@Model.RecentWorks[i].Category.Name</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }





            </div>
    </div>
</div>
  </div>
<div class="container-fluid fh5co-recent-work activity">
    <div class="container recent">
        <div class="row">
            <h2>Portfolio</h2>
            <div class="owl-carousel owl-carousel3 owl-theme">
                @for (int i = 0; i < Model.Tattoos.Count; i++)
                {
                    <div class="card">
                        <img class="card-img" src="~/uploads/tattoo/@Model.Tattoos[i].Photo" alt="">
                        <div class="card-img-overlay">
                            @*<a href="#"><img src="~/assets/img/heart.png" class="heart" alt="heart icon"></a>*@
                            <div class="bottom-text">
                                <h5 class="card-title">@Model.Tattoos[i].Name</h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="container-fluid fh5co-recent-work activity">
    <div class="container recent">
        <div class="row">
            <h2>Activity of the month</h2>
            <div class="owl-carousel owl-carousel3 owl-theme">
                @for (int i = 0; i < Model.Activityofmonths.Count; i++)
                {
                 
                    <div>
                        <div class="card">
                            <img class="card-img" src="~/uploads/activityofmonth/@Model.Activityofmonths[i].Photo" alt="">
                            <div class="card-img-overlay">
                                <div class="bottom-text">
                                    <h5 class="card-title">@Model.Activityofmonths[i].Name</h5>
                                    <a href="#">Read more <img src="~/assets/img/double-right.svg" alt=""></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                </div>
        </div>
    </div>
</div>
<div class="container-fluid fh5co-about-me" id="testimonial">
    <div id="my-carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="card">
              
                <img class="card-img d-block w-100" src="~/uploads/background/@Model.Backgrounds[3].Photo" alt="">
                <div class="card-img-overlay">
                    <h2>People says about me</h2>
                </div>
            </div>
            <div class="carousel-item">
                <div class="carousel-caption d-md-block">
                    <img src="~/assets/img/quote-icon.png" alt="">
                    <p>@Model.Peoples[0].Desc</p>
                </div>
            </div>
            <div class="carousel-item active">
                <div class="carousel-caption d-md-block">
                    <img src="~/assets/img/quote-icon.png" alt="">
                    <p>@Model.Peoples[1].Desc</p>
                </div>
            </div>
            <div class="carousel-item">
                <div class="carousel-caption d-md-block">
                    <img src="~/assets/img/quote-icon.png" alt="">
                    <p>@Model.Peoples[2].Desc</p>
                </div>
            </div>
        </div>
        <ol class="carousel-indicators">
            @{
               
            }
            <li data-target="#my-carousel" data-slide-to="0"> <img src="~/uploads/people/@Model.Peoples[0].Photo" alt=""> <span>@Model.Peoples[0].Name</span> </li>
            <li class="active" data-target="#my-carousel" data-slide-to="1" aria-current="location"> <img src="~/uploads/people/@Model.Peoples[1].Photo" alt=""> <span>@Model.Peoples[1].Name</span> </li>
            <li data-target="#my-carousel" data-slide-to="2"> <img src="~/uploads/people/@Model.Peoples[2].Photo" alt=""> <span>@Model.Peoples[2].Name</span> </li>
        </ol>
    </div>
</div>
<div class="container-fluid fh5co-insta-feed activity">
    <div class="container recent">
        <div class="row mb-5 pb-5">
            <div class="col-lg-6">
                <div class="twit-box">
                  

                    <div class="media mb-3">
                        <img class="align-self-start mr-3 rounded-circle" src="~/uploads/twitter/@Model.Twitter[0].Photo" alt="">
                        <div class="media-body">
                            <h5 class="mb-0 mt-3">@Model.Twitter[0].Name</h5>
                            <p>parviz.ink</p>
                        </div>
                    </div>
                    <p class="text-justify"> @Model.Twitter[0].Desc </p>
                    <div class="clearfix"> <a href="#" class="btn btn-primary mt-2 float-right">Follow</a> </div>
                </div>
            </div>
            <div class="col-lg-6 feed-caro">
                <h2>Instagram feed</h2>
                <div class="owl-carousel owl-carousel4 owl-theme">
                    @for (int i = 0; i < Model.Instagram.Count; i++)
                    {
                        <div>
                            <div class="card">
                                <img class="card-img" src="~/uploads/instagram/@Model.Instagram[i].Photo" alt="">
                                <div class="card-img-overlay"> </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
            <h2 class="text-center d-block">Find me on social media</h2>
            <div class="row social-links">
                <ul class="nav mx-auto">
                    <li class="nav-item"> <a class="nav-link" href="@Model.SocialMedia[0].FacebookLink"><img src="~/assets/img/facebook.png" alt=""></a> </li>
                    <li class="nav-item"> <a class="nav-link" href="@Model.SocialMedia[0].TwitterLink"><img src="~/assets/img/twitter.png" alt=""></a> </li>
                    <li class="nav-item"> <a class="nav-link" href="@Model.SocialMedia[0].PinterestLink"><img src="~/assets/img/pinterest.png" alt=""></a> </li>
                    <li class="nav-item"> <a class="nav-link" href="@Model.SocialMedia[0].GooglePlusLink"><img src="~/assets/img/google-plus.png" alt=""></a> </li>
                </ul>
            </div>
        </div>
    </div>
</div>